[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    .tox,
    build,
    dist,
    htmlcov
per-file-ignores =
    __init__.py:F401,F403,F405
    */ui/qt/*.py:E501
    */validators/*.py:E501
    */validation_helpers/*.py:E501
